<% provide(:title, "首页") %>
<% provide(:class, "ti5") %>
<div id="home" class="container bodyer">
  <div class="row">
    <div id="carousel" class="col-md-12">
      <div id="carousel-generic" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carousel-generic" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-generic" data-slide-to="1"></li>
          <li data-target="#carousel-generic" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
          <a class="item active" href="#">
            <span class="label label-carousel">Dota2: 国际邀请赛</span>
            <img src="<%= image_path 'ti52.jpg' %>" alt="Dota2">
          </a>
          <a class="item" href="#">
            <span class="label label-carousel">i联赛</span>
            <img src="<%= image_path 'i-league.jpg' %>" alt="i联赛">
          </a>
          <a class="item" href="#">
            <span class="label label-carousel">风暴英雄</span>
            <img src="<%= image_path 'heroes2.jpg' %>" alt="风暴英雄">
          </a>
        </div>
        <a class="left carousel-control" href="#carousel-generic" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-generic" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
  <div class="row" id="panels">
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-primary">
            <div class="panel-heading">新闻<a href="news" class="badge pull-right">More</a></div>
            <ul class="list-group">
              <% @news.each do |news| %>
              <li class="list-group-item"><%= link_to news.title[0..20], news %> <span class="label label-danger"><%= "公告" if news.notify? %></span> <small class="pull-right time hidden-xs"><%= news.created_at.getlocal.to_s[5..-10] %></small></li>
              <% end -%>
            </ul>
          </div>
        </div>
        <div class="col-md-12">
          <div class="panel panel-primary">
            <div class="panel-heading">节目表<a href="programs" class="badge pull-right">More</a></div>
            <ul class="list-group">
              <% @programs.each do |program| %>
              <li class="list-group-item"><%= link_to program.content, program %> <small class="pull-right time"><%= program.datatime[5..-1] %></small></li>
              <% end -%>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="row">
        <div class="col-md-12">
          <div id="livelist" role="tabpanel">
            <ul class="nav nav-tabs" role="tablist">
              <li role="presentation" class="active"><a href="#dota2" aria-controls="dota2" role="tab" data-toggle="tab">Dota2</a></li>
              <li role="presentation"><a href="#hs" aria-controls="hs" role="tab" data-toggle="tab">炉石传说</a></li>
              <li class="pull-right disabled"><a href="#">直播聚合</a></li>
            </ul>
            <div class="tab-content">
              <div role="tabpanel" class="tab-pane active" id="dota2">
                <ul class="list-group">
                  <% $dota2_live_list_sort.sort{ |x, y| y <=> x }[0..8].each do |key, value| %>
                  <li class="list-group-item">
                    <a href="<%= $dota2_live_list[value][:href] %>" target="_blank">
                      <span style="color:<%= $color[$dota2_live_list[value][:site]] %>">●</span> <%= $dota2_live_list[value][:nnt] %>
                    </a>
                    <small class="pull-right"><%= $dota2_live_list[value][:view] %> <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></small>
                  </li>
                  <% end -%>
                </ul>
              </div>
              <div role="tabpanel" class="tab-pane" id="hs">
                <ul class="list-group">
                  <% $hs_live_list_sort.sort{ |x, y| y <=> x }[0..8].each do |key, value| %>
                  <li class="list-group-item">
                    <a href="<%= $hs_live_list[value][:href] %>" target="_blank">
                      <span style="color:<%= $color[$hs_live_list[value][:site]] %>">●</span> <%= $hs_live_list[value][:nnt] %>
                    </a>
                    <small class="pull-right"><%= $hs_live_list[value][:view] %> <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></small>
                  </li>
                  <% end -%>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div id="gusolist" role="tabpanel">
            <ul class="nav nav-tabs" role="tablist">
              <li role="presentation" class="active"><a href="#dota2list" aria-controls="dota2" role="tab" data-toggle="tab">Dota2</a></li>
              <li role="presentation"><a href="#hslist" aria-controls="hs" role="tab" data-toggle="tab">炉石传说</a></li>
              <li class="pull-right disabled"><a href="#">最近比赛</a></li>
            </ul>
            <div class="tab-content">
              <div role="tabpanel" class="tab-pane active" id="dota2list">
                <ul class="list-group">
                  <% $dota2_guso_list[0..8].each do |key| %>
                  <li class="list-group-item">
                    <a href="#">
                      <%= key[:opp1] %> <small>vs</small> <%= key[:opp2] %>
                    </a>
                    <small class="pull-right"><%= key[:status] %></small>
                  </li>
                  <% end -%>
                </ul>
              </div>
              <div role="tabpanel" class="tab-pane" id="hslist">
                <ul class="list-group">
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div class="thumbnail">
            <a href="karaokes"><img src="<%= image_path 'sing.jpg' %>" alt="游戏麦霸我最6"></a>
            <div class="caption">
              <span>游戏麦霸我最6<a href="karaokes" class="badge pull-right" role="button">投票</a></span>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div class="thumbnail">
            <a href="/dac"><img src="<%= image_path 'dac.jpg' %>" alt="DAC主赛事圆满结束"></a>
            <div class="caption">
              <span>DAC主赛事圆满结束<a href="#" class="badge pull-right" role="button">回顾</a></span>
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div class="thumbnail">
            <a href="/ileague"><img src="<%= image_path 'i.jpg' %>" alt="i联赛"></a>
            <div class="caption">
              <span>i联赛第三赛季<a href="/ileague" class="badge pull-right" role="button">报名</a></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $('.carousel').carousel();
  $('#notify-close').bind('click', function() {
    // $('#home').animate({marginTop: "-55px"}, 120);
    $('#notify').html('<div class="panel-heading" style="padding-top: 0px;"></div>');
  });
  $('#carousel-generic ol').animate({opacity:'0.8'}, 6000, function() {
    $('#carousel-generic .carousel-control').animate({opacity:'0.5'}, 6000);
  });
</script>