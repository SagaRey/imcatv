<% provide(:title, @karaoke.actor ) %>
<div class="container bodyer">
  <div class="row">
    <div class="col-md-12">
      <% unless notice.nil? %>
      <div class="alert alert-success alert-dismissible alert-notice" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
      <% end -%>

      <p>
        <strong>Actor:</strong>
        <%= @karaoke.actor %>
      </p>

      <p>
        <strong>Introduction:</strong>
        <%= @karaoke.introduction %>
      </p>

      <p>
        <strong>Picture:</strong>
        <%= image_tag @karaoke.picture.url if @karaoke.picture? %>
      </p>

      <p>
        <strong>Video1:</strong>
        <%= @karaoke.video1 %>
      </p>

      <p>
        <strong>Video2:</strong>
        <%= @karaoke.video2 %>
      </p>

      <p>
        <strong>Ballot1:</strong>
        <%= @karaoke.ballot1 %>
      </p>

      <%= link_to 'Edit', edit_karaoke_path(@karaoke) %> |
      <%= link_to 'Back', karaokes_path %>
    </div>
  </div>
</div>
