<div class="container bodyer">
  <div class="row">
    <div class="col-md-12">
      <% unless notice.nil? %>
      <div class="alert alert-success alert-dismissible alert-notice" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
      <% end -%>

      <h3 class="title"><%= @news.title %></h3><br>
      <pre class="content"><%= @news.content %></pre><br>

      <% if admin_logged? %>
      <button type="button" class="btn btn-sm btn-default"><%= link_to '编辑', edit_news_path(@news) %></button>
      <button type="button" class="btn btn-sm btn-default"><%= link_to '删除', @news, method: :delete, data: { confirm: '确定删除?' } %></button>
      <% end -%>
      <button type="button" class="btn btn-sm btn-default"><%= link_to '返回', news_index_path %></button>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <% if @news.comments.any? %>
        <h3>用户评论</h3>
      <% end -%>
      <% @news.comments.each do |comment| %>
        <blockquote>
          <% if admin_logged? %>
          <button type="button" class="btn btn-sm btn-default pull-right"><%= link_to '删除', [comment.news, comment],
               method: :delete,
               data: { confirm: '确定删除?' } %>
          </button>
          <% end -%>
          <p><%= comment.body %></p>
          <footer><%= comment.commenter %></footer>
        </blockquote>
      <% end %>
    </div>
    <div class="col-md-3 col-md-offset-1">
      <h3>评论</h3>
      <%= form_for [@news, @news.comments.build] do |f| %>
      <div class="row">
        <div class="form-group">
          <%= f.text_field :commenter, class: "form-control", placeholder: "昵称" %>
        </div>
        <div class="form-group">
          <%= f.text_area :body, rows: 3, class: "form-control", placeholder: "说点什么吧~" %>
        </div>
        <%= f.submit "提交", class: "btn btn-default btn-block"  %>
      </div>
      <% end %>
    </div>
  </div>
</div>