<div class="container bodyer">
  <div class="row">
    <div class="col-md-12">
      <% unless notice.nil? %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
      <% end -%>

      <h2 class="title"><%= @news.title %></h2><br>
      <pre class="content"><%= @news.content %></pre><br>

      <% if admin_logged? %>
      <button type="button" class="btn btn-sm btn-default"><%= link_to '编辑', edit_news_path(@news) %></button>
      <% end -%>
      <button type="button" class="btn btn-sm btn-default"><%= link_to '返回', request.referrer %></button>
    </div>
  </div>
</div>