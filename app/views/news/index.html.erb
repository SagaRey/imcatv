<div class="container bodyer">
  <div class="row">
    <div class="col-md-12">
      <% unless notice.nil? %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= notice %>
      </div>
      <% end -%>

      <div class="panel panel-default">
        <div class="panel-heading">新闻
          <% if admin_logged? %>
          <span class="badge pull-right"><%= link_to '新建', new_news_path %></span>
          <% end -%>
        </div>
        <table class="table">
          <tbody>
            <% @news.each do |news| %>
            <tr>
              <% if admin_logged? %>
              <td><%= link_to news.title[0..12], news %></td>
              <% else %>
              <td><%= link_to news.title[0..20], news %></td>
              <% end -%>
              <td class="hidden-xs hidden-sm"><%= news.content[0..36] %></td>
              <td class="hidden-xs"><%= news.created_at.getlocal.to_s[5..-10] %></td>
              <% if admin_logged? %>
              <td><%= link_to '编辑', edit_news_path(news) %></td>
              <td><%= link_to '删除', news, method: :delete, data: { confirm: '确定删除?' } %></td>
              <% end -%>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-md-12">
      <%= will_paginate @news, previous_label: "&laquo;", next_label: "&raquo;", class: "pull-left" %>
    </div>
  </div>
</div>